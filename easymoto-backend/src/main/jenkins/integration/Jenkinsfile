pipeline {
    agent any
    stages {
        stage('Checkout'){
            steps {
                echo 'Checkout Project'
                checkout scm
            }
        }
        
        stage('Build'){
            steps {
                echo 'Checkout Project'
                dir('easymoto-beckend'){
                sh 'ls -lh'
                	sh './gradlew clean build'
        		}
            }
        }
    }
    
    post {
    
        always {
            echo 'Esse texto ser√° impresso sempre ao final !'
        }
    }
}
