pipeline {
    agent any

    tools {
        gradle 'gradle'
    }

    parameters {
        string(name: 'REPOSITORIO_NOME', defaultValue: 'Projeto-EasyMoto', description: 'Nome do repositorio git')
    }

    options {
        // Guarda os 5 builds mais recentes
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
   
    stages {
        stage('Checkout'){
            steps {
                echo 'Checkout Project'
                checkout scm
            }
        }
        
        stage('Build'){
            steps {
                echo 'Checkout Project'
                dir('easymoto-backend'){
                	sh './gradlew clean build -x test'
        		}
            }
        }
        
        stage('Test'){
            steps {
                echo 'Testing'
                dir('easymoto-backend'){
                	script {
	                	try{
	                		sh './gradlew test'
	                	} finally {
	                		junit 'build/test-results/test/*.xml'
	                	}
	                }
        		}
            }
        }
        
    }
    
    post {
    
        always {
            echo 'Esse texto será impresso sempre ao final !'
        }
        
        failure {
            echo 'Esse texto será impresso sempre ao final !'
        }
        
        success {
            echo 'Esse texto será impresso sempre ao final !'
        }
        
    }
}
